{
  "compilerOptions": {
    "sourceMap": true,
    "target": "ESNext",
    "module": "ES2015",
    "jsx": "react-jsx",
    "strict": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "Node",
    "lib": ["esnext", "dom"]
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
